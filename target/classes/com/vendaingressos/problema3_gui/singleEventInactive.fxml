                <Button fx:id="comentar" layoutX="540.0" layoutY="100.0" prefHeight="80.0" prefWidth="80.0" onAction="#comentar" text="Send" />
                <ListView fx:id="comentarios" layoutX="20.0" layoutY="200.0" prefHeight="150.0" prefWidth="600.0" />
            </children>
        </AnchorPane>
    </children>
